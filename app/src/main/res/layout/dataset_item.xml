<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="4dp"
    app:cardElevation="@dimen/sp_16"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_item_background" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/dataset_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/card_item_text_primary"/>
            <ImageButton
                android:id="@+id/dataset_menu_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_more_options"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/dataset_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/card_item_text_secondary" />

        <ImageView
            android:id="@+id/dataset_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dataset_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/card_item_text_secondary"/>

            <android.support.design.chip.ChipGroup
                android:id="@+id/dataset_chipgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignLeft="@+id/label_text"
                android:layout_margin="@dimen/dp_8"
                app:chipSpacing="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>