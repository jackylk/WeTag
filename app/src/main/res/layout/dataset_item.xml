<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="4dp"
    app:cardElevation="@dimen/sp_16"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_item_background" >

        <ImageView
            android:id="@+id/dataset_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dataset_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dataset_card_item_text_margin"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/card_item_text_primary"/>

                <TextView
                    android:id="@+id/dataset_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dataset_card_item_text_margin"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/card_item_text_secondary" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/dataset_menu_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_8"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_more_options" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dataset_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dataset_card_item_text_margin"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/card_item_text_secondary"/>

    </LinearLayout>
</android.support.v7.widget.CardView>