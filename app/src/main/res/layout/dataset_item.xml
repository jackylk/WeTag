<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="4dp"
    app:cardElevation="@dimen/sp_16"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_item_background" >

        <ImageView
            android:id="@+id/dataset_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/dataset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/card_item_text_primary"/>

        <TextView
            android:id="@+id/dataset_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/card_item_text_secondary" />

        <TextView
            android:id="@+id/dataset_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/card_item_text_secondary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.button.MaterialButton
                android:id="@+id/buttong_start_labeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:backgroundTint="@android:color/holo_purple"
                app:strokeColor="@android:color/transparent"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:text="@string/button_start_labeling"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/button_modify_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/button_edit_label"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                app:strokeColor="@color/card_item_background" />

            <android.support.design.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_8"
                app:icon="@drawable/ic_more_options"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>